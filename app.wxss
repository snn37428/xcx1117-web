.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}

/*图片大小自适应*/

image {
  width: 100%;
  height: 100%;
  vertical-align: top;
  display: block;
}

.card {
  width: 95%;
  background-color: #fff;
  margin: 20rpx auto 0;
  border-radius: 20rpx;
}

page {
  min-height: 100%;
  background-color: #e4e4e4;
}
.ml31 {
  margin-left: 30rpx;
  position: relative;
}

/*清除浮动样式*/

.clearfix {
  zoom: 1;
  clear: both;
}

.clearfix:after {
  display: block;
  height: 0;
  overflow: hidden;
  content: " ";
  visibility: hidden;
  clear: both;
}

.ml30 {
  margin-left: 30rpx;
}

.b-shadow {
  box-shadow: 10rpx 10rpx 20rpx #999;
}

.hidden {
  display: none;
}

.wx-switch-input{
    width:120rpx !important;
    height:28rpx !important;
    background: #50D2C2 !important;
    border: #e4e4e4 !important; /* 2018-07-18 重置开关边框颜色 */
}
/*白色样式（false的样式）*/
.wx-switch-input::before{
    width:120rpx !important;
    height: 28rpx !important;
}
/*绿色样式（true的样式）*/
.wx-switch-input::after{
    width: 90rpx !important;
    height: 28rpx !important;
}